<%= stylesheet_link_tag 'form' %>
<div class="modal-dialog" role="document">
   <div class="modal_content">
         <h5 class="modal_title">ステータスを変更</h5>
         <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
         </button>
      <div class="modal_body">
        <div class="images">
            <%= link_to image_tag("urn_red.png"), flavor_path(@flavor), method: :post, params: { status: 1 }, class:"StatusLink"%>
            <%= link_to image_tag("urn_yellow.png"), flavor_path(@flavor), method: :post, params: { status: 1 }, class:"StatusLink" %>
            <%= link_to image_tag("urn_blue.png"), flavor_path(@flavor), method: :post, params: { status: 1 }, class:"StatusLink" %>
        </div>
      </div>
         <div class="modal_footer actions">
            <%= link_to "購入", new_flavor_path, class:"btn btn-primary" %>
         </div>
   </div>
</div>