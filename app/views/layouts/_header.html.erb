<header>
   <div class="container">
      <nav>
         <%= link_to flavors_path, class: "header-logo" do %>
            <%= image_tag "header-logo" %>
         <% end %>
         <ul class="header-list">
            <% if user_signed_in? %>
               <li id="kounyuu">
                  <%= link_to image_tag("kounyuu.png"), new_flavor_path %>
               </li>
               <li id="mypage">
                  <%= link_to image_tag("mypage.png"), user_path(current_user) %>
               </li>
               <li id="logout">
                  <%= link_to image_tag("logout.png"), destroy_user_session_path %>
               </li>
            <% else %>
               <li id="sign-up">
                  <%= link_to new_user_registration_path do %>
                     <%= image_tag "sign-up.png" %>
                  <% end %>
               </li>
               <li id="login">
                  <%= link_to new_user_session_path do %>
                     <%= image_tag "login.png"%>
                  <% end %>
               </li>
            <% end %>
         </ul>
      </nav>
    </div>
</header>